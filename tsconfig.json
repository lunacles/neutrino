{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "ESNext",
            "ES2022",
            "DOM"
        ],
        "noUnusedLocals": true,
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": ["jest", "node", "discord.js"],
        "baseUrl": "./",
        "paths": {
            "*": ["src/*"]
        },
        "strictFunctionTypes": true
    },
    "ts-node": {
        "esm": true,
        "transpileOnly": true,
        "compilerOptions": {
            "module": "ESNext"
        }
    },
    "include": [
        "src/**/*",
        "src/config.ts",
        "src/types/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/legacy",
        "mail",
        "legacy",
        "photon",
        "test",
    ]
}
